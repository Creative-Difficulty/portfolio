---
const { links } = Astro.props as {
    links: { label: string; href: string }[];
};
---

<footer class="footer">
    <span class="footer-text">
        <span>Copyright Alexander Leschanz 2025-present</span>
    </span>
    <div class="footer-links">
        {links.map((link) => <a href={link.href}>{link.label}</a>)}
    </div>
</footer>
<style>
    .footer {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        font-size: 0.85rem;
        color: var(--faint);
        padding: 1rem 1.5rem;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: var(--panel);
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.5);
    }
    .footer-text {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        color: var(--muted);
    }

    .footer-links {
        display: flex;
        gap: 0;
        flex-wrap: wrap;
        text-decoration: underline var(--muted) solid;
    }
    .footer-links a + a {
        margin-left: 1rem;
        padding-left: 1rem;
        border-left: 1px solid var(--border);
    }
    .footer a {
        color: var(--muted);
        text-decoration: none;
    }
    .footer a:hover,
    .footer a:focus {
        color: var(--accent);
    }
    @media (max-width: 800px) {
        .footer {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>
